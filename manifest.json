{
  "name": "tab-manager",
  "description": "Demo Extension to change background color!",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["storage", "tabs", "declarativeContent", "contextMenus"],
  "browser_action": {
    "default_icon": "images/browser_action.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+M"
      }
    }
  }
}
